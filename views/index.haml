%form#hamlurl{:action => "/search", :method => "POST"}
  .input
    %input#search.xlarge{:name => "q", :size => "30", :type => "text"}
    %button.btn.small.primary Search
%div#playlist
  - %w[notice error warning alert info].each do |key|
    - if flash[key]
      %div{:id => key,:class => "alert-message success"}= flash[key]
  - @tracks.each do |artist,track|
    %h2.title=  artist.to_s
    %h3.title=  track.to_s
    
    
    